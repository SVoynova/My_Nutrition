@model IEnumerable<My_Nutrition.Models.JournalModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Journal</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thoughts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gratitudes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concerns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Questions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoughts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gratitudes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concerns)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Questions)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
