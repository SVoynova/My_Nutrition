@model IEnumerable<MyNutritionApp.Models.FoodModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Food consumption on</h1> 

<p>
    <a asp-action="Create">Add Food</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriesPerServing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCalories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Protein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carbohydrates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fibre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sugars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sodium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Potassium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cholesterol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VitaminA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VitaminC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calcium)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaloriesPerServing)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCalories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Protein)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carbohydrates)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fibre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sugars)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sodium)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Potassium)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cholesterol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VitaminA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VitaminC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calcium)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ShowSearchForm">Back to Search</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
