                @Html.DisplayNameFor(model => model.Sodium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Potassium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cholesterol)
            </th>
            <th>
                Vitamin A
            </th>
            <th>
                Vitamin C
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calcium)
            </th>
            <th></th>
        </tr>
    </thead>
