@model IEnumerable<MyNutritionApp.Models.UserPlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Nutritional plan</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <center>
                    Data
                </center>
            </th>
            <th>
                <center>
                    Sex
                </center>
            </th>
            <th>
                <center>
                    Age
                </center>
            </th>
            <th>
                <center>
                    Height
                </center>
            </th>
            <th>
                <center>
                    Current weight
                </center>
            </th>
            <th>
                <center>
                    Goal weight
                </center>
            </th>
            <th>
                <center>
                    Activity level
                </center>
            </th>
            <th>
                <center>
                    Intensity of the plan
                </center>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.Date)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.Sex)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.Age)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.Height)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.CurrentWeight)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.GoalWeight)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.ActivityLevel)
                </center>
            </td>
            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.IntensityOfThePlan)
                </center>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
